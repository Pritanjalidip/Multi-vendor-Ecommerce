<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- Vendor Register Servlet -->
    <servlet>
        <servlet-name>VendorRegisterServlet</servlet-name>
        <servlet-class>com.ecommerce.servlets.VendorRegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VendorRegisterServlet</servlet-name>
        <url-pattern>/vendor-register</url-pattern>
    </servlet-mapping>

    <!-- Vendor Login Servlet -->
    <servlet>
        <servlet-name>VendorLoginServlet</servlet-name>
        <servlet-class>com.ecommerce.servlets.VendorLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VendorLoginServlet</servlet-name>
        <url-pattern>/vendor-login</url-pattern>
    </servlet-mapping>

    <!-- Add Product Servlet -->
    <servlet>
        <servlet-name>AddProductServlet</servlet-name>
        <servlet-class>com.ecommerce.servlets.AddProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddProductServlet</servlet-name>
        <url-pattern>/add-product</url-pattern>
    </servlet-mapping>

    <!-- Fetch Products Servlet -->
    <servlet>
        <servlet-name>FetchProductsServlet</servlet-name>
        <servlet-class>com.ecommerce.servlets.FetchProductsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FetchProductsServlet</servlet-name>
        <url-pattern>/fetch-products</url-pattern>
    </servlet-mapping>

    <!-- Default Landing Page -->
    <welcome-file-list>
        <welcome-file>vendorLogin.jsp</welcome-file>
    </welcome-file-list>

</web-app>
